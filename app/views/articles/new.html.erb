<div class='container'>
  <%= form_with model: @article, local: true do |f| %>
  <div class='form-group'>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <%= form_validation_message(@article, :title) %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: '30', class: 'form-control' %>
    <%= form_validation_message(@article, :body) %>
  </div>

  <div>
    <%= f.label :category %>
    <%= collection_check_boxes :category, :ids, Category.all, :id, :name do |category| %>
      <%= category.label do %>
        <%= category.check_box %>
        <%= category.text %>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.submit '作成', class: 'btn btn-primary' %>
  </div>
  <% end %>
</div>