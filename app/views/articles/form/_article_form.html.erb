<%= f.fields_for :article, f.object.article do |ff| %>
<div class='form-group'>
  <%= ff.label :title %>
  <%= ff.text_field :title, class: 'form-control' %>
  <%= form_validation_message(f.object.article, :title) %>
</div>

<div class="form-group">
  <%= ff.label :body %>
  <div class='row'>
    <div class='col-md-6'>
      <%= ff.text_area :body, class: 'form-control article-body-form' %>
    </div>
    <div class='col-md-6'>
      <div class='article-body-markdown border p-2'>
      </div>
    </div>
  </div>
  <%= form_validation_message(f.object.article, :body) %>
</div>
<% end %>

<%= javascript_pack_tag 'articles/sync_scroll.js' %>
<%= javascript_pack_tag 'articles/article_markdown.js' %>