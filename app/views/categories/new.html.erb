<div class='container'>
    <%= form_with model: @category do |f| %>
    <div class='form-group'>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :category_type %>
        <%= f.number_field :category_type, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
    </div>
    <% end %>
</div>