<div class="container article-container mt-5" style="background-color: white;">
  <div class='d-flex justify-content-between align-items-center'>
    <div class='d-flex justify-content-start'>
      <small class='mr-2 text-muted'>いいね: <%= @article.like_count %></small>
      <small class='mr-2 text-muted'>QIITA: <%= @article.qiita_page_view %></small>
      <small class='mr-2 text-muted'>SITE: <%= @article.pv %> pv</small>
    </div>
    <div class='d-flex justify-content-end mb-4'>
      <%= link_to  edit_admin_article_path(@article), class: 'btn text-muted' do %>
        <i class="fas fa-edit"></i>
      <% end %>
      <%= link_to admin_article_path(@article), method: :delete, class: 'btn text-muted', data: { confirm: 'この記事を削除します。' } do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    </div>
  </div>

  <h1 class='mb-5'>
    <%= @article.title %>
  </h1>

  <div class='markdown-container'>
      <%= markdown(@article.body).html_safe %>
  </div>
</div>