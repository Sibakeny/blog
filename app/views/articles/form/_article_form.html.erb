<%= f.fields_for :article, f.object.article do |ff| %>
<div class='form-group'>
  <%= ff.label :title %>
  <%= ff.text_field :title, class: 'form-control' %>
  <%= form_validation_message(f.object.article, :title) %>
</div>

<div class="form-group">
  <div class='row'>
    <div class='col-md-4'>
      <%= ff.label :body %>
    </div>
    <div class='col-md-2'>
        <input type="file" id="upload_chat" name="images" style="display:none", data-id='<%= @article.id %>' form='image-submit-form' />
        <button id="upload_chat_button" class="btn btn-small btn-inverse">upload</button>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-6'>
      <%= ff.text_area :body, class: 'form-control article-body-form' %>
    </div>
    <div class='col-md-6'>
      <div class='article-body-markdown border p-2'>
      </div>
    </div>
  </div>
  <%= form_validation_message(f.object.article, :body) %>
</div>
<% end %>
