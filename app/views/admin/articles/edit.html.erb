<div class='container-fluid article-form-container'>
  <%= form_with model: @article_form, url: admin_article_path(@article), method: :patch, local: true do |f| %>
    <%= render 'admin/articles/form/article_form', f: f %>
    <div class='card p-3'>
      <%= render 'admin/articles/form/categories_form', f: f %>
    </div>

    <div class='card p-3 mt-3'>
      <%= render 'admin/articles/form/qiita_form', f: f %>
    </div>

    <div class="form-group">
      <%= f.submit '更新', class: 'float' %>
    </div>
  <% end %>

  <%= render 'admin/articles/images/form_image_container', article: @article %>
</div>

<%# 画像保存のフォーム %>
<%= form_with url: admin_article_images_path(@article), method: :post, id: 'image-submit-form' do |f| %>
<% end %>

<%= javascript_pack_tag 'articles/sync_scroll.js' %>
<%= javascript_pack_tag 'articles/article_markdown.js' %>
<%= javascript_pack_tag 'articles/form.js' %>