<div class='container'>
    <%= form_with model: @article do |f| %>
    <div class='form-group'>
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: '30', class: 'form-control' %>
    </div>

    <div>
        <%= f.label :category %>
        <%= collection_check_boxes :category, :ids, Category.all, :id, :name do |category| %>
        <%= category.label do %>
        <%= category.check_box %>
        <%= category.text %>
        <% end %>
        <% end %>
    </div>

    <div class="form-group">
        <%= f.submit class: 'btn btn-primary' %>
    </div>
    <% end %>
</div>