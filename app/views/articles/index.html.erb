<div class='container-fluid'>

  <div class='article-stats-container mb-5 mt-5'>
    <div class='article-stats-inner-container'>
      <div class='stats-block green-card'>
        <p>合計PV数</p>
        <p class='pv'><%= total_pv %> <i class="fas fa-eye"></i></p>
      </div>
      <div class='stats-block pink-card'>
        <p>合計いいね数</p>
        <p class='like'><%= total_like %> <i class="fas fa-heart"></i></p>
      </div>
      <div class='stats-block blue-card'>
        <p>合計コメント数</p>
        <p class='comment'>100 <i class="fas fa-comment"></i></p>
      </div>
    </div>
  </div>

  <div class="text-right mb-5">
    <%= link_to new_article_path, class: 'custom-btn btn--red btn--radius btn--cubic' do %>
      記事作成
      <i class="fas fa-angle-right fa-position-right"></i>
    <% end %>
  </div>

  <table class='article-table'>
    <tr class='heading'>
      <th>タイトル</th>
      <th class='like'>いいね <i class="fas fa-heart"></i> </th>
      <th class='pv'>サイトPV <i class="fas fa-eye"></i></th>
      <th class='pv'>QiitaPV <i class="fas fa-rss"></i></th>
    </tr>
    <% @articles.each do |article| %>
    <tr class='table-hover-action table-content'>
      <td>
        <%= link_to article_path(article), class: 'article-link-wrapper' do %>
          <div><%= article.title %></div>
          <div class='text-right'>
            <small><%= article.created_at.to_s %></small>
          </div>
        <% end %>
      </td>
      <td class='number'><%= article.like_count %></td>
      <td class='number'><%= article.pv %></td>
      <td class='number'><%= article.qiita_page_view %></td>
    </tr>
    <% end %>
  </table>
  <div class='d-flex justify-content-center mt-4'>
    <div>
      <%= paginate @articles %>
    </div>
  </div>
</div>