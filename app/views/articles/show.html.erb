<div class="container">
  <div class='d-flex justify-content-end mb-4'>
    <%= link_to '編集', edit_article_path(@article), class: 'btn btn-success' %>
    <%= link_to '削除', article_path(@article), method: :delete, class: 'btn btn-secondary' %>
  </div>

  <h1 class='mb-5'>
      <%= @article.title %>
  </h1>

  <div class='markdown-container'>
      <%= markdown(@article.body).html_safe %>
  </div>
</div>