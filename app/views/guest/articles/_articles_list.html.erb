<% articles.each do |article| %>
  <%= link_to guest_article_path(article), class: 'no-a-tag-effect' do %>
    <div class='w-100 d-flex justify-content-start mb-3 hover-card' style="background-color: white;">
      <div class='image-container'>
        <%= image_tag 'default_article', style: 'height: 150px; max-width: none;' %>
      </div>
      <div class='p-3' style='line-height: 30px'>
        <p class='font-weight-bold'><%= article.title %></p>
        <p class='text-muted'><%= article.body.truncate(80) %></p>
        <div class='d-flex justify-content-between align-items-end mt-auto'>
          <small class='text-muted mr-4'><%= article.pv %> PV</small>
          <small class='text-muted'><%= article.created_at.to_s %></small>
        </div>
      </div>
    </div>
  <% end %>
<% end %>