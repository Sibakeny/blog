<div class='container'>
  <%= form_with model: @category, url: categories_path, local: true do |f| %>
  <div class='form-group'>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= form_validation_message(@category, :name) %>
  </div>

  <div class="form-group">
    <%= f.label :category_type %>
    <%= f.select :category_type, Category.category_types.keys.map {|k| [t("activerecord.attributes.category.#{k}"), k]}, {}, { class: 'form-control' } %>
    <%= form_validation_message(@category, :category_type) %>
  </div>

  <div class="form-group">
    <%= f.submit '作成', class: 'btn btn-primary' %>
  </div>
  <% end %>
</div>