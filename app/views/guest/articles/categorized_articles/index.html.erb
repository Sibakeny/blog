<div class='container'>
  <div class='home-articles-container'>
    <div class='mb-5 text-center w-100'>
      <h1><%= @category.name %> の記事一覧</h1>
    </div>
    <div class='articles-list-container'>
      <% @articles.each do |article| %>
        <%= link_to guest_article_path(article), class: 'card-link-wrapper' do %>
          <div class='card article-list-card'>
            <div class="bd-placeholder-img card-img-top article-card-image">
              <%= image_tag 'default_article', style: 'height: 150px;' %>
            </div>
            <div class='card-body'>
              <p><%= article.title %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class='article-sidebar'>
      <%= render 'shared/category_sidebar' %>
    </div>
  </div>
</div>