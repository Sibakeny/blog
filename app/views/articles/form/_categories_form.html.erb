<%= f.fields_for :categories, f.object.article.categories do |ff| %>
  <div>
    <div class='form-group'>
      <%= ff.label :category_language %>
    </div>
    <div class='form-group'>
      <%= ff.collection_check_boxes :ids, Category.language, :id, :name do |category| %>
        <%= category.label do %>
          <%= category.check_box %>
          <%= category.text %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div>
    <div class='form-group'>
      <%= ff.label :category_framework %>
    </div>
    <div class='form-group'>
      <%= ff.collection_check_boxes :ids, Category.framework, :id, :name do |category| %>
        <%= category.label do %>
          <%= category.check_box %>
          <%= category.text %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>