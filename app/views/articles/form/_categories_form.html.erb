<%= f.fields_for :categories, f.object.article.categories do |ff| %>
  <div>
    <div class='form-group title-block mt-5'>
      カテゴリー(言語)
    </div>
    <div class='form-group d-flex justify-content-start'>
      <%= ff.collection_check_boxes :ids, Category.language, :id, :name do |category| %>
        <div class='p-2'>
          <%= category.label do %>
            <%= category.check_box %>
            <%= category.text %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div>
    <div class='form-group title-block mt-5'>
      カテゴリー(フレームワーク)
    </div>
    <div class='form-group d-flex justify-content-start'>
      <div class='p-2'>
        <%= ff.collection_check_boxes :ids, Category.framework, :id, :name do |category| %>
          <%= category.label do %>
            <%= category.check_box %>
            <%= category.text %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>